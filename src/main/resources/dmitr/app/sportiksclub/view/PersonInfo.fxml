<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity"
           orientation="VERTICAL" stylesheets="@../css/style.css"
           xmlns="http://javafx.com/javafx/17.0.2-ea"
           fx:controller="dmitr.app.sportiksclub.controller.PersonInfoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="10.0">
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefWidth="74.0" text="Имя" textAlignment="RIGHT"/>
            <TextField fx:id="nameTextField" prefHeight="40" editable="false"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" text="Фамилия"/>
            <TextField fx:id="surnameTextField" prefHeight="40" editable="false"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="74.0" text="Отчество"/>
            <TextField fx:id="patronymicTextField" prefHeight="40" editable="false"/>
        </HBox>

        <Button fx:id="closeButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" text="Закрыть"/>
    </VBox>
</SplitPane>
