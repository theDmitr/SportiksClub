<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           orientation="VERTICAL" stylesheets="@../css/style.css"
           xmlns="http://javafx.com/javafx/17.0.2-ea"
           fx:controller="dmitr.app.sportiksclub.controller.CreateMembershipTypeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="10.0">
        <fx:define>
            <ToggleGroup fx:id="sexButtonsGroup"/>
        </fx:define>

        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefWidth="120.0" text="Название"
                   textAlignment="RIGHT"/>
            <TextField fx:id="nameTextField" prefHeight="40"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefWidth="120.0" text="Длительность"
                   textAlignment="RIGHT"/>
            <TextField fx:id="durationTextField" prefHeight="40"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefWidth="150.0" text="Наличие тренера"
                   textAlignment="RIGHT"/>
            <CheckBox fx:id="hasTrainerCheckBox"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="saveButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" text="Сохранить"/>
            <Button fx:id="cancelButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" text="Отменить"/>
        </HBox>
    </VBox>
</SplitPane>
