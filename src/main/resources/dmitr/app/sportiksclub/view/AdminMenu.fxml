<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" orientation="VERTICAL" stylesheets="@../css/style.css"
           xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="dmitr.app.sportiksclub.controller.AdminMenuController">
    <BorderPane maxHeight="80.0">
        <left>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="260.0" BorderPane.alignment="CENTER">
                <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../image/fitness.png"/>
                </ImageView>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="222.0" text="Фитнес-клуб &quot;Спортикс&quot;"
                       textAlignment="CENTER"/>
            </HBox>
        </left>
        <right>
            <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="100.0" prefWidth="260.0"
                  BorderPane.alignment="CENTER_RIGHT">
                <Label fx:id="userLoginLabel" alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="25.0"
                       prefWidth="150.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </Label>
                <ImageView fx:id="logoutImage" fitHeight="28.0" pickOnBounds="true" preserveRatio="true"
                           GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                    <Image url="@../image/logout.png"/>
                </ImageView>
            </HBox>
        </right>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </BorderPane>
    <VBox alignment="CENTER" prefHeight="210.0" prefWidth="600.0" spacing="10.0">
        <Button fx:id="employeesButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="230.0" text="Сотрудники"/>
        <Button fx:id="membershipTypesButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="230.0"
                text="Абонементы"/>
    </VBox>
</SplitPane>
